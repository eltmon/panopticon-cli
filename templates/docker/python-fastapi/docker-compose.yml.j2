version: '3.8'

services:
  api:
    build:
      context: ./api
      dockerfile: ../Dockerfile.api
    ports:
      - "{{ computed.ports.api | default(variables.api_port) }}:8000"
    volumes:
      - ./api:/app
    environment:
      - DATABASE_URL=postgresql://postgres:postgres@postgres:5432/{{ variables.database_name }}
{% if variables.enable_redis %}
      - REDIS_URL=redis://redis:6379
{% endif %}
    depends_on:
      postgres:
        condition: service_healthy
{% if variables.enable_redis %}
      redis:
        condition: service_started
{% endif %}
    networks:
      - app-network
{% if docker.traefik.enabled %}
      - {{ docker.traefik.network }}
{% endif %}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{ workspace.name }}-api.rule=Host(`api-{{ workspace.name }}.{{ docker.traefik.domain }}`)"
      - "traefik.http.routers.{{ workspace.name }}-api.tls=true"
      - "traefik.http.services.{{ workspace.name }}-api.loadbalancer.server.port=8000"
      - "traefik.docker.network={{ docker.traefik.network }}"

{% if variables.enable_frontend %}
  frontend:
    build:
      context: ./frontend
      dockerfile: ../Dockerfile.frontend
    ports:
      - "{{ computed.ports.frontend | default(variables.frontend_port) }}:5173"
    volumes:
      - ./frontend:/app
      - /app/node_modules
    environment:
      - NODE_ENV=development
      - VITE_API_URL=https://api-{{ workspace.name }}.{{ docker.traefik.domain }}
    networks:
      - app-network
{% if docker.traefik.enabled %}
      - {{ docker.traefik.network }}
{% endif %}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{ workspace.name }}-fe.rule=Host(`{{ workspace.name }}.{{ docker.traefik.domain }}`)"
      - "traefik.http.routers.{{ workspace.name }}-fe.tls=true"
      - "traefik.http.services.{{ workspace.name }}-fe.loadbalancer.server.port=5173"
      - "traefik.docker.network={{ docker.traefik.network }}"
{% endif %}

  postgres:
{% if docker.database.strategy == 'shared' %}
    external: true
    name: panopticon-postgres
{% else %}
    image: {{ docker.database.image | default('postgres:16-alpine') }}
    environment:
      - POSTGRES_DB={{ variables.database_name }}
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
    volumes:
      - postgres-data:/var/lib/postgresql/data
    ports:
      - "{{ computed.ports.database | default(variables.db_port) }}:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 5s
      timeout: 5s
      retries: 5
    networks:
      - app-network
{% endif %}

{% if variables.enable_redis %}
  redis:
    image: redis:7-alpine
    ports:
      - "{{ computed.ports.redis | default(6379) }}:6379"
    networks:
      - app-network
{% endif %}

volumes:
  postgres-data:

networks:
  app-network:
    driver: bridge
{% if docker.traefik.enabled %}
  {{ docker.traefik.network }}:
    external: true
{% endif %}
