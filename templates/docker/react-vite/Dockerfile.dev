# React + Vite Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install dependencies first for caching
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Enable polling for Docker volume hot reload
ENV CHOKIDAR_USEPOLLING=true

# Run Vite dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
