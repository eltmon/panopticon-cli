# React/Vite Development Dockerfile
FROM node:{{ variables.node_version }}-alpine

WORKDIR /app

# Install dependencies first for caching
COPY package*.json ./
RUN npm ci

# Source files are mounted in dev mode
COPY . .

EXPOSE 5173

# Run Vite dev server with host binding for Docker
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
