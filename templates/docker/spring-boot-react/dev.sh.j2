#!/bin/bash
# Development script for {{ workspace.name }}
# Generated by Panopticon template engine

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Starting {{ variables.app_name | default('development') }} environment...${NC}"

# Check if Docker is running
if ! docker info > /dev/null 2>&1; then
    echo -e "${YELLOW}Docker is not running. Please start Docker first.${NC}"
    exit 1
fi

# Create shared volumes if they don't exist
docker volume create panopticon-maven-cache 2>/dev/null || true

# Start services
echo -e "${GREEN}Starting containers...${NC}"
docker compose up --build "$@"

echo -e "${GREEN}Development environment ready!${NC}"
echo ""
echo "Frontend: https://{{ workspace.name }}.{{ docker.traefik.domain }}"
echo "API:      https://api-{{ workspace.name }}.{{ docker.traefik.domain }}"
{% if variables.enable_debug %}
echo "Debug:    localhost:{{ (computed.ports.api | default(variables.api_port)) + 1000 }}"
{% endif %}
