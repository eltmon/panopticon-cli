version: '3.8'

services:
  frontend:
    build:
      context: ./frontend
      dockerfile: ../Dockerfile.frontend
    ports:
      - "{{ computed.ports.frontend | default(variables.frontend_port) }}:5173"
    volumes:
      - ./frontend:/app
      - /app/node_modules
    environment:
      - NODE_ENV=development
      - CHOKIDAR_USEPOLLING=true
      - VITE_API_URL=https://api-{{ workspace.name }}.{{ docker.traefik.domain }}
    networks:
      - app-network
{% if docker.traefik.enabled %}
      - {{ docker.traefik.network }}
{% endif %}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{ workspace.name }}-fe.rule=Host(`{{ workspace.name }}.{{ docker.traefik.domain }}`)"
      - "traefik.http.routers.{{ workspace.name }}-fe.tls=true"
      - "traefik.http.services.{{ workspace.name }}-fe.loadbalancer.server.port=5173"
      - "traefik.docker.network={{ docker.traefik.network }}"

  api:
    build:
      context: ./api
      dockerfile: ../Dockerfile.api
    ports:
      - "{{ computed.ports.api | default(variables.api_port) }}:8080"
{% if variables.enable_debug %}
      - "{{ (computed.ports.api | default(variables.api_port)) + 1000 }}:5005"
{% endif %}
    volumes:
      - ./api:/app
      - maven-cache:/root/.m2
    environment:
      - SPRING_PROFILES_ACTIVE=dev
      - SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/{{ variables.database_name }}
      - SPRING_DATASOURCE_USERNAME=postgres
      - SPRING_DATASOURCE_PASSWORD=postgres
{% if variables.enable_redis %}
      - SPRING_REDIS_HOST=redis
      - SPRING_REDIS_PORT=6379
{% endif %}
    depends_on:
      postgres:
        condition: service_healthy
{% if variables.enable_redis %}
      redis:
        condition: service_started
{% endif %}
    networks:
      - app-network
{% if docker.traefik.enabled %}
      - {{ docker.traefik.network }}
{% endif %}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{ workspace.name }}-api.rule=Host(`api-{{ workspace.name }}.{{ docker.traefik.domain }}`)"
      - "traefik.http.routers.{{ workspace.name }}-api.tls=true"
      - "traefik.http.services.{{ workspace.name }}-api.loadbalancer.server.port=8080"
      - "traefik.docker.network={{ docker.traefik.network }}"

  postgres:
{% if docker.database.strategy == 'shared' %}
    # Using shared database - connect to existing instance
    external: true
    name: panopticon-postgres
{% else %}
    image: {{ docker.database.image | default('postgres:16-alpine') }}
    environment:
      - POSTGRES_DB={{ variables.database_name }}
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
    volumes:
      - postgres-data:/var/lib/postgresql/data
    ports:
      - "{{ computed.ports.database | default(variables.db_port) }}:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 5s
      timeout: 5s
      retries: 5
    networks:
      - app-network
{% endif %}

{% if variables.enable_redis %}
  redis:
{% if docker.caches.redis == 'shared' %}
    # Using shared Redis - connect to existing instance
    external: true
    name: panopticon-redis
{% else %}
    image: redis:7-alpine
    ports:
      - "{{ computed.ports.redis | default(variables.redis_port) }}:6379"
    volumes:
      - redis-data:/data
    networks:
      - app-network
{% endif %}
{% endif %}

volumes:
  postgres-data:
  redis-data:
  maven-cache:
    name: panopticon-maven-cache
    external: true

networks:
  app-network:
    driver: bridge
{% if docker.traefik.enabled %}
  {{ docker.traefik.network }}:
    external: true
{% endif %}
