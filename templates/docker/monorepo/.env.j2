# Environment configuration for {{ workspace.name }}
# Generated by Panopticon template engine

COMPOSE_PROJECT_NAME={{ workspace.name }}

# Ports
FRONTEND_PORT={{ computed.ports.frontend | default(variables.frontend_port) }}
BACKEND_PORT={{ computed.ports.api | default(variables.api_port) }}
DB_PORT={{ computed.ports.database | default(variables.db_port) }}
{% if variables.enable_redis %}
REDIS_PORT={{ computed.ports.redis | default(variables.redis_port) }}
{% endif %}

# Database
DB_NAME={{ variables.database_name }}
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:{{ computed.ports.database | default(variables.db_port) }}/{{ variables.database_name }}

# URLs
VITE_API_URL=https://api-{{ workspace.name }}.{{ docker.traefik.domain }}
