{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@panopticon/shared/*": ["./packages/shared/src/*"]
    }
  },
  "include": ["src/**/*", "packages/shared/src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/dashboard/**/*"]
}
